<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_bg_blue_stroke_radius"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/clientNameHeader_TV"
            style="@style/TV_labels"
            android:text="Client Name :" />

        <TextView
            android:id="@+id/clientName_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motifworks"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/departmentNameHeader_TV"
            style="@style/TV_labels"
            android:text="Department Name :" />

        <TextView
            android:id="@+id/departmentName_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/purchaseOrderHeader_TV"
            style="@style/TV_labels"
            android:text="Purchase Order# :" />

        <TextView
            android:id="@+id/purchaseOrder_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/transactionHeader_TV"
            style="@style/TV_labels"
            android:text="Transaction# :" />

        <TextView
            android:id="@+id/transaction_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motifworks"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/addressHeader_TV"
            style="@style/TV_labels"
            android:text="Address :" />

        <TextView
            android:id="@+id/address_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motifworks"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/cityHeader_TV"
            style="@style/TV_labels"
            android:text="City :" />

        <TextView
            android:id="@+id/city_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motifworks"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/stateHeader_TV"
            style="@style/TV_labels"
            android:text="State :" />

        <TextView
            android:id="@+id/state_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motifworks"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/zipHeader_TV"
            style="@style/TV_labels"
            android:text="Zip :" />

        <TextView
            android:id="@+id/zip_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="560038"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/emailHeader_TV"
            style="@style/TV_labels"
            android:text="Email :" />

        <TextView
            android:id="@+id/email_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motifworks"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/phoneNoHeader_TV"
            style="@style/TV_labels"
            android:text="Phone Number :" />

        <TextView
            android:id="@+id/phoneNo_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9801234567"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>